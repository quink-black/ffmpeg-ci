{
  "name": "ffmpeg",
  "version": "8.0.1",
  "port-version": 3,
  "description": "Custom FFmpeg build - A library to decode, encode, transcode, mux, demux, stream, filter and play multimedia.",
  "homepage": "https://ffmpeg.org",
  "license": null,
  "dependencies": [
    {
      "name": "ffmpeg-bin2c",
      "host": true
    },
    {
      "name": "vcpkg-cmake-get-vars",
      "host": true
    },
    {
      "name": "vcpkg-pkgconfig-get-modules",
      "host": true
    }
  ],
  "default-features": [
    "avcodec",
    "avdevice",
    "avfilter",
    "avformat",
    "swresample",
    "swscale"
  ],
  "features": {
    "avcodec": {
      "description": "Build the avcodec library"
    },
    "avdevice": {
      "description": "Build the avdevice library",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec", "avformat"]
        }
      ]
    },
    "avfilter": {
      "description": "Build the avfilter library"
    },
    "avformat": {
      "description": "Build the avformat library",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec"]
        }
      ]
    },
    "swresample": {
      "description": "Build the swresample library"
    },
    "swscale": {
      "description": "Build the swscale library"
    },
    "ffmpeg": {
      "description": "Build the ffmpeg application",
      "supports": "!uwp",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec", "avfilter", "avformat"]
        }
      ]
    },
    "ffplay": {
      "description": "Build the ffplay application",
      "supports": "!uwp",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec", "avfilter", "avformat", "sdl2", "swresample", "swscale"]
        }
      ]
    },
    "ffprobe": {
      "description": "Build the ffprobe application",
      "supports": "!uwp",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec", "avformat"]
        }
      ]
    },
    "gpl": {
      "description": "Allow use of GPL code, the resulting libs and binaries will be under GPL"
    },
    "nonfree": {
      "description": "Allow use of nonfree code, the resulting libs and binaries will be unredistributable"
    },
    "aom": {
      "description": "AV1 video encoding/decoding via libaom",
      "dependencies": ["aom"]
    },
    "mp3lame": {
      "description": "MP3 encoding via libmp3lame",
      "dependencies": ["mp3lame"]
    },
    "opencv": {
      "description": "Video filtering via libopencv",
      "dependencies": ["opencv"]
    },
    "opus": {
      "description": "Opus de/encoding via libopus",
      "dependencies": ["opus"]
    },
    "sdl2": {
      "description": "SDL2 support for ffplay",
      "dependencies": [
        {
          "name": "sdl2",
          "default-features": false,
          "features": ["x11"],
          "platform": "linux"
        },
        {
          "name": "sdl2",
          "platform": "!linux"
        }
      ]
    },
    "tesseract": {
      "description": "Tesseract OCR for ocr filter",
      "supports": "!static",
      "dependencies": ["tesseract"]
    },
    "vpx": {
      "description": "VP8/VP9 de/encoding via libvpx",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["avcodec"]
        },
        "libvpx"
      ]
    },
    "x264": {
      "description": "H.264 encoding via x264",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["gpl"]
        },
        "x264"
      ]
    },
    "x265": {
      "description": "HEVC encoding via x265",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": ["gpl"]
        },
        "x265"
      ]
    },
    "zlib": {
      "description": "zlib support",
      "dependencies": ["zlib"]
    },
    "iconv": {
      "description": "Iconv support",
      "dependencies": ["libiconv"]
    }
  }
}